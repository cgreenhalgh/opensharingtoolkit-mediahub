<%# HTML5 File detail - in FileEdit %>
<% if @state == 'nofile': %>
No file
<% else if @state == 'error': %>
Error loading file
<% else: %>
<%= @size %> bytes, <%= if not @type? or @type=='' then 'unknown mimetype' else @type %>
<% if @state == 'loading': %>
Loading...
<% else if @state == 'unchanged': %>
<a href="#-save" class="button tiny do-save">Save</a>
<% else if @state == 'loaded': %>
<a href="#-save" class="button tiny do-save">Save (new)</a>
<% else: %>
(<%= @state %>)
<% end %>
<% end %>

