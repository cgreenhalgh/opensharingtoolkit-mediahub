<%# App add or edit, takes { data: Thing, add: true|false } as data (title, description, ...); parent is a row %>
<div class="columns large-12">
  <h2><%= if @add then 'Add' else 'Edit' %> <%= @contentType.title %></h2>
</div>
<form>
  <div class="columns large-12">
    <input type="submit" value="<%= if @add then 'Add' else 'Save changes' %>"/>
    <input type="reset" value="Clear"/>
    <input type="button" value="Cancel" class="do-cancel"/>
    <input type="button" value="Prepare for download" class="do-update"/>

    <label>Title
      <input type="text" name="title" placeholder="title" value="<%= @data.title %>"/>
    </label>

    <label>Top-level Items
      <div class="thingref-list-holder"></div>
    </label>

    <label>Description
      <textarea name="description" placeholder="description" ><%= @data.description %></textarea>
    </label>
  </div>
</form>

